{
  "name": "tito-szamlazzhu",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext ts src",
    "test": "jest",
    "build": "rm -rf ./build && tsc",
    "coverage": "jest --coverage",
    "watch": "nodemon",
    "dev": "node -r ts-node/register -r dotenv/config src/index.ts",
    "start": "node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jssc-eu/tito-szamlazzhu.git"
  },
  "keywords": [],
  "author": "nec@jsconfbp.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jssc-eu/tito-szamlazzhu/issues"
  },
  "homepage": "https://github.com/jssc-eu/tito-szamlazzhu#readme",
  "dependencies": {
    "@jssc/szamlazz.js": "^4.2.0",
    "axios": "^0.21.1",
    "dedent": "^0.7.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.18.1",
    "fastify-helmet": "^5.3.1",
    "fastify-raw-body": "^3.1.0",
    "fastify-sensible": "^3.1.1",
    "form-data": "^4.0.0",
    "mailgun-js": "^0.22.0",
    "round-to": "^5.0.0",
    "validate-vat": "^0.7.0",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.30.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.9",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.js",
      "<rootDir>/src/**/*.test.ts",
      "<rootDir>/test/**/*.test.js",
      "<rootDir>/test/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/szamlazz/"
    ]
  },
  "engines": {
    "node": "12.x"
  },
  "nodemonConfig": {
    "delay": "1000",
    "exec": "npm run dev",
    "watch": [
      "src/",
      "events-config.yaml",
      ".env"
    ],
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "ext": "ts"
  }
}
